{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"declaration": true,
		"declarationDir": "dist/types",
		"emitDeclarationOnly": true, 
		"outDir": "./dist",
		"jsx": "react-native",
		"moduleResolution": "node",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "",
		"paths": {
			"*": ["src/*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["esnext", "DOM"],
		"types": ["react-native"]
	},
	"include": ["src", "global.d.ts"]
}
